<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Fin Serve</title>
    @using System.Web.Optimization
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="icon" href="@Url.Content("~/images/logo_icon.ico")" />

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color: #cc0066">
        <div class="container">
            <div class="navbar-header">
                <a href="@Url.Action("Index", "Home" )" id="backtolist" title="Click to go back to list">
                    <img src="@Url.Content("~/images/logo.png")" alt="FinServe" style="" />
                </a>
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse" style="font-size:large;">
                <ul class="nav navbar-nav">
                    @*<li>@Html.ActionLink("Home", "Index", "Home")</li>*@
                    <li>@Html.ActionLink("Lead Generator", "Index", "LeadGenerator")</li>
                    <li>@Html.ActionLink("Client", "Index", "Client")</li>
                    <li>@Html.ActionLink("Import Excel", "Create", "ImportExcel", new { calltype = 0 }, null)</li>
                    <li>@Html.ActionLink("Report", "Index", "Report")</li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - OmniSoft Techlabs</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    @Scripts.Render("~/bundles/jqueryval")


    @section Scripts {
        <script type="text/javascript">
            $(function () { // will trigger when the document is ready
                $('.datepicker').datepicker(); //Initialise any date pickers
            });
        </script>
    }

</body>
</html>